<% if (props.sucrase) { -%>
import * as Yup from 'yup'
<% } else { -%>
const Yup = require('yup')
<% } -%>

const store = Yup.object().shape({
    <% props.fields.forEach(field => { -%>
<%- field.fieldName %>: Yup.<%= field.type.toLowerCase() %>().required(), 
    <% }) %>
});

const update = Yup.object().shape({
    <% props.fields.forEach(field => { -%>
<%- field.fieldName %>: Yup.<%= field.type.toLowerCase() %>(), 
    <% }) %>
});

const <%= props.name %>Validator = {
    store,
    update,
};

<% if (props.sucrase) { -%>
export default <%= props.name %>Validator;
<% } else { -%>
module.exports = <%= props.name %>Validator;
<% } -%>
