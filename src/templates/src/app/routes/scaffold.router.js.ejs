<% if (props.sucrase) { -%>
import { Router } from 'express';
import controller from '../controllers';
<% } else { -%>
const { Router } = require('express');
const controller = require('../controllers');
<% } -%>

const routes = Router();

routes.get('/<%= props.name %>', controller.<%= props.nameCapitalized %>Controller.index);
routes.get('/<%= props.name %>/:id', controller.<%= props.nameCapitalized %>Controller.show);
routes.post('/<%= props.name %>', controller.<%= props.nameCapitalized %>Controller.store);
routes.put('/<%= props.name %>/:id', controller.<%= props.nameCapitalized %>Controller.update);
routes.delete('/<%= props.name %>/:id', controller.<%= props.nameCapitalized %>Controller.delete);

<% if (props.sucrase) { -%>
export default routes;
<% } else { -%>
module.exports = routes;
<% } -%>
