import { Router } from 'express';

import SampleController from '../controllers/SampleController';

const sampleRoutes = Router();
const sampleController = new SampleController();

sampleRoutes.get('/sample', sampleController.index);
sampleRoutes.get('/sample/:id', sampleController.show);
sampleRoutes.post('/sample', sampleController.store);
sampleRoutes.put('/sample/:id', sampleController.update);
sampleRoutes.delete('/sample/:id', sampleController.delete);

export default sampleRoutes;
