<% if (props.sucrase) { -%>
import Mongoose from 'mongoose';
<% } else { -%>
const Mongoose = require('mongoose');
<% } -%>

const SampleModel = new Mongoose.Schema({
    title: {
        type: String,
        required: true,
    },
    description: {
        type: String,
        required: true
      },
    },
    {
        timestamps: true
    }
);

<% if (props.sucrase) { -%>
export default Mongoose.model('Sample', SampleModel);
<% } else { -%>
module.exports = Mongoose.model('Sample', SampleModel);
<% } -%>