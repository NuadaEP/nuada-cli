<% if (props.sucrase) { -%>
import Mongoose from 'mongoose';
<% } else { -%>
const Mongoose = require('mongoose');
<% } -%>

const <%= props.name %>Model = new Mongoose.Schema(
  {
<% props.fields.forEach(field => { -%>
    <%= field.fieldName %>: {
<% if (field.type.search('=') == -1) { -%>
      type: <%= field.type %>,
      require: true,
      <% } else { -%>
      type: Mongoose.Schema.Types.ObjectId,
      ref: '<%= field.type.split('=')[1] %>',
      <% } -%>
},
<% }) -%>
  },
  {
    timestamps: true
  }
);

<% if (props.sucrase) { -%>
export default Mongoose.model('<%= props.name %>', <%= props.name %>Model)
<% } else { -%>
module.exports = Mongoose.model('<%= props.name %>', <%= props.name %>Model)
<% } -%>
